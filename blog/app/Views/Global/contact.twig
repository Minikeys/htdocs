{% extends '/Templates/default.twig' %}

{% import '/Templates/form.twig' as form %}

{% block title %}

    <title>Contact - {{ nameapp }}</title>

{% endblock %}

{% block content %}

    <h1>Nous contacter</h1>

    {% if flash('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ flash('success') }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}

    {% if flash('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ flash('error') }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}

    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                {{ form.input('firstname', 'Votre Pr√©nom',  session.firstname , {require: 'required'})}}
            </div>
            <div class="form-group col-md-6">
                {{ form.input('lastname', 'Votre Nom',  session.lastname , {require: 'required'})}}
            </div>
        </div>
        <div class="form-group">
            {{ form.input('email', 'Votre email', session.email, {type: 'email', require: 'required'}) }}
        </div>
        <div class="form-group">
            {{ form.input('subject', 'Sujet',  '' , {require: 'required'})}}
        </div>
        <div class="form-group">
            {{ form.textarea('message', 'Votre message', '', {require: 'required'}) }}
        </div>

        <button class="btn btn-primary">Envoyer</button>

    </form>

{% endblock %}
