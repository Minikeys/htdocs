{% extends '/Templates/default.twig' %}

{% block title %}

    <title>{{ nameapp }}</title>

{% endblock %}

{% block content %}
    <div class="jumbotron">
        <h1 class="display-4">Hello, world!</h1>
        <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
        <hr class="my-4">
        <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
        <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
    </div>

    {% if flash('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ flash('success') }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}

    {% if flash('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ flash('error') }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}
    <h2>Dernières news</h2>
    <div class="row">

        <div class="col">
            <div class="row">

                {% for post in variable.posts %}

                    <div class="col-6">
                        <div class="card mb-4 box-shadow">
                            <div class="card-body">
                                <h5 class="card-title">{{ post.title }}</h5>
                                <p><small class="text-muted">{{ post.category }}</small></p>
                                <p class="card-text">{{ post.content | markdown | striptags | truncate(80, true, '...') }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="index.php?p=posts.show&id={{ post.id }}" class="btn btn-sm btn-outline-secondary">Lire la suite</a>
                                        {% if session.grade == 1 %}
                                            <a href="index.php?p=admin.posts.edit&id={{ post.id }}" class="btn btn-sm btn-outline-primary">Editer</a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">Mise à jour le {{ post.date_update|date("d/m/Y") }}</small></br>
                                <small class="text-muted">Autheur : {{ post.firstname }}</small>
                            </div>
                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
