{% extends '/Templates/default.twig' %}

{% import '/Templates/form.twig' as form %}

{% block title %}

    <title>S'enregistrer - {{ nameapp }}</title>

{% endblock %}

{% block content %}

    {% if flash('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ flash('success') }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}

    {% if flash('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ flash('error') }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}

    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                {{ form.input('username', 'Votre identifiant', variable.form.data.username , {require: 'required'})}}
            </div>
            <div class="form-group col-md-6">
                {{ form.input('password', 'Votre mot de passe', password, {type: 'password'}) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
    {{ form.input('firstname', 'Votre Prénom', variable.form.data.firstname, {require: 'required'})}}
            </div>
            <div class="form-group col-md-6">
    {{ form.input('lastname', 'Votre Nom', variable.form.data.lastname, {require: 'required'})}}
            </div>
        </div>
        <div class="form-group">
            {{ form.input('email', 'Votre email', variable.form.data.email, {type: 'email', require: 'required'}) }}
        </div>

        <button class="btn btn-primary">Mettre à jour</button>

        </form>

{% endblock %}
