{% extends '/Templates/default.twig' %}

{% import '/Templates/form.twig' as form %}

{% block title %}

    <title>S'enregistrer - Mon blog</title>

{% endblock %}

{% block content %}

    {% if flash('error') %}
        <div class="alert alert-danger">

        {{ flash('error') }}

        </div>
    {% endif %}

<form method="post">

    {{ form.input('username', 'Votre identifiant', name, {require: 'required'})}}

    {{ form.input('password', 'Votre mot de passe', password, {type: 'password', require: 'required'}) }}

    {{ form.input('email', 'Votre email', email, {type: 'email', require: 'required'}) }}

    <button class="btn btn-primary">S'enregistrer</button>

</form>

{% endblock %}