{% extends '/Templates/default.twig' %}

{% block title %}

    <title>{{ variable.categorie.title }} - Mon blog</title>

{% endblock %}

{% block content %}

<h1>{{ variable.categorie.title }}</h1>

    <div class="row">

        <div class="col-9">
            <div class="row">
                {% for post in variable.articles %}

                    <div class="col-6">
                        <div class="card mb-4 box-shadow">
                            <div class="card-body">
                                <h5 class="card-title">{{ post.title }}</h5>
                                <p><small class="text-muted">{{ post.category }}</small></p>
                                <p class="card-text">{{ post.content | markdown | striptags | truncate(80, true, '...') }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="{{ post.url }}" class="btn btn-sm btn-outline-secondary">Lire la suite</a>
                                        {% if session.grade == 1 %}
                                            <a href="index.php?p=admin.posts.edit&id={{ post.id }}" class="btn btn-sm btn-outline-primary">Editer</a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">Mise Ã  jour le {{ post.date_update|date("d/m/Y") }}</small></br>
                                <small class="text-muted">Autheur : {{ post.firstname }}</small>
                            </div>
                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>

        <div class="col">
            <ul class="list-group">
                {% for category in variable.categories %}
                    {% set foo = category.url |split('id=', 2) %}
                    <a href="{{ category.url }}" class="list-group-item list-group-item-action {% if foo[1] == variable.categorie.id %} active {% endif %}">
                        {{ category.title }}
                        <span class="badge badge-primary badge-pill">{{ category.count }}</span>
                    </a>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}