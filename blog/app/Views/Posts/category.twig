{% extends '/Templates/default.twig' %}

{% block title %}

    <title>{{ variable.categorie.title }} - Mon blog</title>

{% endblock %}

{% block content %}

<h1>{{ variable.categorie.title }}</h1>

<div class="row">

    <div class="col-sm-8">

        <ul>

            {% for post in variable.articles %}

                <h2> <a href="{{ post.url }}">{{ post.title }}</a></h2>

                <p><em>{{ post.category }}</em></p>

                <p>{{ post.extrait }}</p>

            {% endfor %}

        </ul>

    </div>

    <div class="col-sm-4">

        <ul>

            {% for category in variable.categories %}
                <li>
                    <a href="{{ category.url }}">{{ category.title }}</a>
                </li>
            {% endfor %}

        </ul>

    </div>

</div>
{% endblock %}